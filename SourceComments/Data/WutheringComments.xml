<wuthering-comments>
	
	<author name="Ademar Letracteur" initials="AL" email="ademar.letracteur@gmail.com" website="www.ademar-letracteur.com"/>

	<categories>
		<category name="block"		description="Thick block comment"/>
		<category name="class"		description="Comment inserted before a class definition"/>
		<category name="code"		description="Multiline comment inserted before a code block"/>
		<category name="file"		description="Comment inserted at the top of a source file"/>
		<category name="function"	description="Comment inserted before a function"/>
		<category name="method"		description="Comment inserted before a method"/>
	</categories>

	<templates>
		<template name="c-like" description="C-like comment constructs">
			<comment category="block">
				/**************************************************************************************************************
				 **************************************************************************************************************
				 **************************************************************************************************************
				 ******                                                                                                  ******
				 ******                                                                                                  ******
				 ******                                            BLOCK                                                 ******
				 ******                                                                                                  ******
				 ******                                                                                                  ******
				 **************************************************************************************************************
				 **************************************************************************************************************
				 **************************************************************************************************************/
			</comment>
			<comment category="class">
				/*==============================================================================================================

				    class class -
					Description

				  ==============================================================================================================*/
			</comment>
			<comment category="code">
				/*==============================================================================================================



				  ==============================================================================================================*/
			</comment>
			<comment category="function">
				/*--------------------------------------------------------------------------------------------------------------

				    NAME
					method - summary

				    PROTOTYPE
					prototype

				    DESCRIPTION
					description

				    PARAMETERS
					$param (type) -
					description

				    RETURN VALUE
					description

				    NOTES
					description

				 *-------------------------------------------------------------------------------------------------------------*/
			</comment>
			<comment category="file">
				/**************************************************************************************************************

				    NAME
					{$file}

				    DESCRIPTION
					description.

				    AUTHOR
					{$author}, {$month}/{$year}.

				    HISTORY
					[Version : 1.0]		[Date : {$date}]     [Author : {$initials}]
						Initial version.

				**************************************************************************************************************/
			</comment>
		</template>
	</templates>

	<groups>
		<group language="php" extensions="php php3 php4 php5 phpclass phpinclude phpscript phs phpinc">
			<comment category="block"	template="c-like"/>
			<comment category="class"	template="c-like"/>
			<comment category="method"	template="c-like" template-category="function"/>
			<comment category="function"	template="c-like"/>
			<comment category="file"	template="c-like"/>
			<comment category="standard">
				/***



				 ***/
			</comment>
		</group>
		<group language="php" extensions="php php3 php4 php5 phpclass phpinclude phpscript phs phpinc">
			<comment category="block"	template="c-like"/>
			<comment category="class"	template="c-like"/>
			<comment category="method"	template="c-like" template-category="function"/>
			<comment category="function"	template="c-like"/>
			<comment category="file"	template="c-like"/>
			<comment category="standard">
				/***



				***/
			</comment>
		</group>
	</groups>
	
</wuthering-comments>